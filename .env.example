# Configuration de l'application
NODE_ENV=production
PORT=3000

# Base de données MongoDB
# Développement : mongodb://localhost:27017/asc-zone-de-tir
# Production : mongodb+srv://username:password@cluster.mongodb.net/asc-zone-de-tir
MONGODB_URI=mongodb://localhost:27017/asc-zone-de-tir

# Session (IMPORTANT: Changer en production !)
SESSION_SECRET=changez_ce_secret_avec_une_valeur_aleatoire_securisee
SESSION_NAME=asc_session
SESSION_MAX_AGE=86400000

# Email (Nodemailer) - Optionnel
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre_email@example.com
EMAIL_PASSWORD=votre_mot_de_passe
EMAIL_FROM=ASC Zone de Tir <contact@asczondetir.sn>

# URLs
BASE_URL=https://votre-domaine.com
SITE_NAME=ASC Zone de Tir

# Uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH=public/uploads

# Sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Google Analytics (optionnel)
GA_TRACKING_ID=

# Réseaux sociaux
FACEBOOK_URL=https://facebook.com/asczondetir
INSTAGRAM_URL=https://instagram.com/asczondetir
TWITTER_URL=https://twitter.com/asczondetir
