<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <!-- Hero -->
    <section class="bg-primary text-white py-5">
        <div class="container text-center py-4">
            <h1 class="display-4 fw-bold mb-3">Résultats</h1>
            <p class="lead">Consultez les résultats de nos compétitions</p>
        </div>
    </section>

    <!-- Filtres -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <select class="form-select" id="disciplineFilter">
                        <option value="">Toutes les disciplines</option>
                        <option value="pistolet">Pistolet</option>
                        <option value="carabine">Carabine</option>
                        <option value="tir-sportif">Tir sportif</option>
                        <option value="tir-de-precision">Tir de précision</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <select class="form-select" id="yearFilter">
                        <option value="">Toutes les années</option>
                        <% for(let year = new Date().getFullYear(); year >= 2020; year--) { %>
                            <option value="<%= year %>"><%= year %></option>
                        <% } %>
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="searchInput" placeholder="Rechercher une compétition...">
                </div>
            </div>
        </div>
    </section>

    <!-- Résultats -->
    <section class="py-5">
        <div class="container">
            <% if (results && results.length > 0) { %>
                <div class="row g-4">
                    <% results.forEach(result => { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm hover-shadow">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">
                                        <i class="bi bi-trophy me-2"></i>
                                        <%= result.competitionName %>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <small class="text-muted d-block">
                                            <i class="bi bi-calendar me-1"></i>
                                            <%= new Date(result.date).toLocaleDateString('fr-FR', {
                                                day: 'numeric',
                                                month: 'long',
                                                year: 'numeric'
                                            }) %>
                                        </small>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-geo-alt me-1"></i>
                                            <%= result.location %>
                                        </small>
                                    </div>

                                    <div class="mb-3">
                                        <span class="badge bg-secondary"><%= result.discipline %></span>
                                        <span class="badge bg-info text-dark"><%= result.category %></span>
                                    </div>

                                    <% if (result.rankings && result.rankings.length > 0) { %>
                                        <div class="mb-3">
                                            <h6 class="fw-bold small">Top 3:</h6>
                                            <ol class="list-unstyled small">
                                                <% result.rankings.slice(0, 3).forEach((ranking, index) => { %>
                                                    <li class="d-flex align-items-center mb-1">
                                                        <% if (ranking.rank === 1) { %>
                                                            <i class="bi bi-trophy-fill text-warning me-2"></i>
                                                        <% } else if (ranking.rank === 2) { %>
                                                            <i class="bi bi-trophy-fill text-secondary me-2"></i>
                                                        <% } else if (ranking.rank === 3) { %>
                                                            <i class="bi bi-trophy-fill text-danger me-2"></i>
                                                        <% } %>
                                                        <strong><%= ranking.rank %>.</strong>
                                                        <span class="ms-2"><%= ranking.athleteName %></span>
                                                        <span class="ms-auto text-primary fw-bold"><%= ranking.score %></span>
                                                    </li>
                                                <% }); %>
                                            </ol>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="card-footer bg-white border-top-0">
                                    <a href="/resultats/<%= result.slug %>" class="btn btn-outline-primary btn-sm w-100">
                                        Voir le classement complet <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav class="mt-5">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Précédent</a>
                                </li>
                            <% } %>

                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>

                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Suivant</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-trophy text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">Aucun résultat disponible</h5>
                    <p class="text-muted">Les résultats des compétitions seront publiés ici</p>
                </div>
            <% } %>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
