<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                <li class="breadcrumb-item"><a href="/resultats">Résultats</a></li>
                <li class="breadcrumb-item active"><%= result.competitionName %></li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0">
                            <i class="bi bi-trophy me-2"></i>
                            <%= result.competitionName %>
                        </h1>
                    </div>
                    <div class="card-body">
                        <!-- Informations de la compétition -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <i class="bi bi-calendar text-primary me-2"></i>
                                    <strong>Date:</strong>
                                    <%= new Date(result.date).toLocaleDateString('fr-FR', {
                                        weekday: 'long',
                                        day: 'numeric',
                                        month: 'long',
                                        year: 'numeric'
                                    }) %>
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-geo-alt text-primary me-2"></i>
                                    <strong>Lieu:</strong>
                                    <%= result.location %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <i class="bi bi-bullseye text-primary me-2"></i>
                                    <strong>Discipline:</strong>
                                    <span class="badge bg-secondary ms-2"><%= result.discipline %></span>
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-tag text-primary me-2"></i>
                                    <strong>Catégorie:</strong>
                                    <span class="badge bg-info text-dark ms-2"><%= result.category %></span>
                                </p>
                            </div>
                        </div>

                        <% if (result.description) { %>
                            <div class="mb-4">
                                <%- result.description %>
                            </div>
                        <% } %>

                        <!-- Podium -->
                        <% if (result.rankings && result.rankings.length >= 3) { %>
                            <div class="text-center mb-5">
                                <h5 class="fw-bold mb-4">Podium</h5>
                                <div class="row g-3">
                                    <!-- 2ème place -->
                                    <div class="col-4">
                                        <div class="card border-secondary" style="margin-top: 40px;">
                                            <div class="card-body text-center">
                                                <i class="bi bi-trophy-fill text-secondary" style="font-size: 2.5rem;"></i>
                                                <h6 class="mt-2 mb-1">2ème</h6>
                                                <p class="fw-bold mb-1"><%= result.rankings[1].athleteName %></p>
                                                <p class="text-muted small mb-0"><%= result.rankings[1].club || 'ASC Zone de Tir' %></p>
                                                <h5 class="text-primary mt-2"><%= result.rankings[1].score %></h5>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- 1ère place -->
                                    <div class="col-4">
                                        <div class="card border-warning">
                                            <div class="card-body text-center">
                                                <i class="bi bi-trophy-fill text-warning" style="font-size: 3.5rem;"></i>
                                                <h6 class="mt-2 mb-1">1er</h6>
                                                <p class="fw-bold mb-1"><%= result.rankings[0].athleteName %></p>
                                                <p class="text-muted small mb-0"><%= result.rankings[0].club || 'ASC Zone de Tir' %></p>
                                                <h4 class="text-primary mt-2"><%= result.rankings[0].score %></h4>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- 3ème place -->
                                    <div class="col-4">
                                        <div class="card border-danger" style="margin-top: 80px;">
                                            <div class="card-body text-center">
                                                <i class="bi bi-trophy-fill text-danger" style="font-size: 2rem;"></i>
                                                <h6 class="mt-2 mb-1">3ème</h6>
                                                <p class="fw-bold mb-1"><%= result.rankings[2].athleteName %></p>
                                                <p class="text-muted small mb-0"><%= result.rankings[2].club || 'ASC Zone de Tir' %></p>
                                                <h5 class="text-primary mt-2"><%= result.rankings[2].score %></h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>

                        <!-- Classement complet -->
                        <h5 class="fw-bold mb-3">Classement complet</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th>Rang</th>
                                        <th>Athlète</th>
                                        <th>Club</th>
                                        <th class="text-end">Score</th>
                                        <% if (result.rankings.some(r => r.time)) { %>
                                            <th class="text-end">Temps</th>
                                        <% } %>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% result.rankings.forEach(ranking => { %>
                                        <tr class="<%= ranking.rank <= 3 ? 'table-warning' : '' %>">
                                            <td class="fw-bold">
                                                <%= ranking.rank %>
                                                <% if (ranking.rank === 1) { %>
                                                    <i class="bi bi-trophy-fill text-warning ms-1"></i>
                                                <% } else if (ranking.rank === 2) { %>
                                                    <i class="bi bi-trophy-fill text-secondary ms-1"></i>
                                                <% } else if (ranking.rank === 3) { %>
                                                    <i class="bi bi-trophy-fill text-danger ms-1"></i>
                                                <% } %>
                                            </td>
                                            <td><%= ranking.athleteName %></td>
                                            <td class="text-muted"><%= ranking.club || 'ASC Zone de Tir' %></td>
                                            <td class="text-end fw-bold text-primary"><%= ranking.score %></td>
                                            <% if (result.rankings.some(r => r.time)) { %>
                                                <td class="text-end text-muted"><%= ranking.time || '-' %></td>
                                            <% } %>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Documents liés -->
                        <% if (result.documents && result.documents.length > 0) { %>
                            <div class="mt-4">
                                <h6 class="fw-bold mb-3">Documents</h6>
                                <div class="list-group">
                                    <% result.documents.forEach(doc => { %>
                                        <a href="<%= doc.url %>" target="_blank" class="list-group-item list-group-item-action">
                                            <i class="bi bi-file-pdf text-danger me-2"></i>
                                            <%= doc.name %>
                                        </a>
                                    <% }); %>
                                </div>
                            </div>
                        <% } %>

                        <!-- Actions -->
                        <div class="mt-4 text-center">
                            <a href="/resultats" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left me-2"></i>Retour aux résultats
                            </a>
                            <button class="btn btn-outline-secondary" onclick="window.print()">
                                <i class="bi bi-printer me-2"></i>Imprimer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
