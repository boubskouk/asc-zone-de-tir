<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../../partials/header') %>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../partials/sidebar', { currentPage: 'membres' }) %>

            <!-- Main Content -->
            <main class="col-md-10 px-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold">Gestion des membres</h2>
                    <a href="/admin/membres/nouveau" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Nouveau membre
                    </a>
                </div>

                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <%= successMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <%= errorMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Filtres -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="searchInput" placeholder="Rechercher...">
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" id="statusFilter">
                                    <option value="">Tous les statuts</option>
                                    <option value="active">Actif</option>
                                    <option value="pending">En attente</option>
                                    <option value="expired">Expiré</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" id="roleFilter">
                                    <option value="">Tous les rôles</option>
                                    <option value="member">Membre</option>
                                    <option value="moderator">Modérateur</option>
                                    <option value="admin">Admin</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-secondary w-100" id="exportBtn">
                                    <i class="bi bi-download me-2"></i>Exporter (CSV)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistiques rapides -->
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="text-muted mb-1">Total membres</h6>
                                <h3 class="mb-0"><%= stats.total %></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="text-muted mb-1">Actifs</h6>
                                <h3 class="mb-0 text-success"><%= stats.active %></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="text-muted mb-1">En attente</h6>
                                <h3 class="mb-0 text-warning"><%= stats.pending %></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="text-muted mb-1">Expirés</h6>
                                <h3 class="mb-0 text-danger"><%= stats.expired %></h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Liste des membres -->
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Membre</th>
                                        <th>Email</th>
                                        <th>N° Adhérent</th>
                                        <th>Statut</th>
                                        <th>Rôle</th>
                                        <th>Inscription</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (members && members.length > 0) { %>
                                        <% members.forEach(member => { %>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="<%= member.profilePhoto %>"
                                                             class="rounded-circle me-2"
                                                             width="40"
                                                             height="40"
                                                             onerror="this.src='https://ui-avatars.com/api/?name=<%= member.firstName %>+<%= member.lastName %>&size=40'">
                                                        <div>
                                                            <div class="fw-bold"><%= member.firstName %> <%= member.lastName %></div>
                                                            <small class="text-muted"><%= member.phone || '-' %></small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><%= member.email %></td>
                                                <td><%= member.membershipNumber || '-' %></td>
                                                <td>
                                                    <% if (member.membershipStatus === 'active') { %>
                                                        <span class="badge bg-success">Actif</span>
                                                    <% } else if (member.membershipStatus === 'pending') { %>
                                                        <span class="badge bg-warning">En attente</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Expiré</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (member.role === 'admin') { %>
                                                        <span class="badge bg-danger">Admin</span>
                                                    <% } else if (member.role === 'moderator') { %>
                                                        <span class="badge bg-info">Modérateur</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">Membre</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <small><%= new Date(member.createdAt).toLocaleDateString('fr-FR') %></small>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/admin/membres/<%= member._id %>" class="btn btn-outline-primary" title="Voir">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <a href="/admin/membres/<%= member._id %>/modifier" class="btn btn-outline-secondary" title="Modifier">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <button class="btn btn-outline-danger"
                                                                onclick="confirmDelete('<%= member._id %>', '<%= member.firstName %> <%= member.lastName %>')"
                                                                title="Supprimer">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center py-4 text-muted">
                                                Aucun membre trouvé
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Précédent</a>
                                </li>
                            <% } %>

                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>

                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Suivant</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete(memberId, memberName) {
            if (confirm(`Êtes-vous sûr de vouloir supprimer le membre "${memberName}" ?\n\nCette action est irréversible.`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/admin/membres/${memberId}/supprimer`;
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>
