<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <!-- TinyMCE -->
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
</head>
<body>
    <%- include('../../partials/header') %>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../partials/sidebar', { currentPage: 'articles' }) %>

            <!-- Main Content -->
            <main class="col-md-10 px-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/articles">Articles</a></li>
                        <li class="breadcrumb-item active">
                            <%= article._id ? 'Modifier' : 'Nouveau' %>
                        </li>
                    </ol>
                </nav>

                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <%= successMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <%= errorMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <form action="<%= article._id ? '/admin/articles/' + article._id + '/modifier' : '/admin/articles/nouveau' %>"
                      method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Titre -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-body">
                                    <label for="title" class="form-label fw-bold">Titre de l'article *</label>
                                    <input type="text" class="form-control form-control-lg" id="title" name="title"
                                           value="<%= article.title || '' %>" required
                                           placeholder="Entrez le titre de l'article">
                                    <small class="text-muted">Le slug sera généré automatiquement</small>
                                </div>
                            </div>

                            <!-- Contenu -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-body">
                                    <label for="content" class="form-label fw-bold">Contenu *</label>
                                    <textarea id="content" name="content" class="form-control"><%= article.content || '' %></textarea>
                                </div>
                            </div>

                            <!-- Extrait -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-body">
                                    <label for="excerpt" class="form-label fw-bold">Extrait</label>
                                    <textarea class="form-control" id="excerpt" name="excerpt" rows="3"
                                              placeholder="Résumé court de l'article (optionnel)"><%= article.excerpt || '' %></textarea>
                                    <small class="text-muted">Utilisé pour les aperçus et le SEO</small>
                                </div>
                            </div>

                            <!-- SEO -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-white">
                                    <h6 class="mb-0">
                                        <i class="bi bi-search me-2"></i>Optimisation SEO
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="metaTitle" class="form-label">Meta titre</label>
                                        <input type="text" class="form-control" id="metaTitle" name="metaTitle"
                                               value="<%= article.seo?.metaTitle || '' %>"
                                               placeholder="Titre pour les moteurs de recherche">
                                        <small class="text-muted">Recommandé : 50-60 caractères</small>
                                    </div>
                                    <div class="mb-3">
                                        <label for="metaDescription" class="form-label">Meta description</label>
                                        <textarea class="form-control" id="metaDescription" name="metaDescription" rows="2"
                                                  placeholder="Description pour les moteurs de recherche"><%= article.seo?.metaDescription || '' %></textarea>
                                        <small class="text-muted">Recommandé : 150-160 caractères</small>
                                    </div>
                                    <div>
                                        <label for="keywords" class="form-label">Mots-clés</label>
                                        <input type="text" class="form-control" id="keywords" name="keywords"
                                               value="<%= article.seo?.keywords ? article.seo.keywords.join(', ') : '' %>"
                                               placeholder="mot1, mot2, mot3">
                                        <small class="text-muted">Séparez les mots-clés par des virgules</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <!-- Actions -->
                            <div class="card shadow-sm mb-4 sticky-top" style="top: 20px;">
                                <div class="card-header bg-white">
                                    <h6 class="mb-0">Publication</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="status" class="form-label">Statut</label>
                                        <select class="form-select" id="status" name="status">
                                            <option value="draft" <%= article.status === 'draft' ? 'selected' : '' %>>Brouillon</option>
                                            <option value="published" <%= article.status === 'published' ? 'selected' : '' %>>Publié</option>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="category" class="form-label">Catégorie *</label>
                                        <select class="form-select" id="category" name="category" required>
                                            <option value="">Sélectionner...</option>
                                            <option value="actualites" <%= article.category === 'actualites' ? 'selected' : '' %>>Actualités</option>
                                            <option value="competitions" <%= article.category === 'competitions' ? 'selected' : '' %>>Compétitions</option>
                                            <option value="vie-associative" <%= article.category === 'vie-associative' ? 'selected' : '' %>>Vie associative</option>
                                            <option value="technique" <%= article.category === 'technique' ? 'selected' : '' %>>Technique</option>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="publishedAt" class="form-label">Date de publication</label>
                                        <input type="datetime-local" class="form-control" id="publishedAt" name="publishedAt"
                                               value="<%= article.publishedAt ? new Date(article.publishedAt).toISOString().slice(0, 16) : '' %>">
                                    </div>

                                    <div class="mb-3 form-check">
                                        <input type="checkbox" class="form-check-input" id="isFeatured" name="isFeatured"
                                               <%= article.isFeatured ? 'checked' : '' %>>
                                        <label class="form-check-label" for="isFeatured">
                                            Article à la une
                                        </label>
                                    </div>

                                    <hr>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check-circle me-2"></i>
                                            <%= article._id ? 'Mettre à jour' : 'Publier' %>
                                        </button>
                                        <% if (article._id) { %>
                                            <a href="/actualites/<%= article.slug %>" target="_blank" class="btn btn-outline-info">
                                                <i class="bi bi-eye me-2"></i>Prévisualiser
                                            </a>
                                        <% } %>
                                        <a href="/admin/articles" class="btn btn-outline-secondary">Annuler</a>
                                    </div>
                                </div>
                            </div>

                            <!-- Image à la une -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-white">
                                    <h6 class="mb-0">Image à la une</h6>
                                </div>
                                <div class="card-body">
                                    <% if (article.featuredImage) { %>
                                        <img src="<%= article.featuredImage %>" alt="Image actuelle"
                                             class="img-fluid rounded mb-3" id="currentImage">
                                    <% } %>
                                    <input type="file" class="form-control" name="featuredImage" accept="image/*"
                                           onchange="previewImage(event)">
                                    <small class="text-muted d-block mt-2">Format: JPG, PNG. Max: 5MB</small>
                                    <div id="imagePreview" class="mt-3"></div>
                                </div>
                            </div>

                            <!-- Tags -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-white">
                                    <h6 class="mb-0">Tags</h6>
                                </div>
                                <div class="card-body">
                                    <input type="text" class="form-control" name="tags"
                                           value="<%= article.tags ? article.tags.join(', ') : '' %>"
                                           placeholder="tag1, tag2, tag3">
                                    <small class="text-muted">Séparez les tags par des virgules</small>
                                </div>
                            </div>

                            <% if (article._id) { %>
                                <!-- Statistiques -->
                                <div class="card shadow-sm">
                                    <div class="card-header bg-white">
                                        <h6 class="mb-0">Statistiques</h6>
                                    </div>
                                    <div class="card-body">
                                        <p class="small mb-2">
                                            <i class="bi bi-eye me-2"></i>
                                            <strong>Vues:</strong> <%= article.views || 0 %>
                                        </p>
                                        <p class="small mb-2">
                                            <i class="bi bi-calendar me-2"></i>
                                            <strong>Créé:</strong> <%= new Date(article.createdAt).toLocaleDateString('fr-FR') %>
                                        </p>
                                        <p class="small mb-0">
                                            <i class="bi bi-pencil me-2"></i>
                                            <strong>Modifié:</strong> <%= new Date(article.updatedAt).toLocaleDateString('fr-FR') %>
                                        </p>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </form>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // TinyMCE Editor
        tinymce.init({
            selector: '#content',
            height: 500,
            menubar: false,
            plugins: [
                'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview',
                'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
                'insertdatetime', 'media', 'table', 'help', 'wordcount'
            ],
            toolbar: 'undo redo | blocks | bold italic | alignleft aligncenter alignright | bullist numlist outdent indent | link image | removeformat | code',
            content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; font-size: 14px }'
        });

        // Preview image
        function previewImage(event) {
            const preview = document.getElementById('imagePreview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" class="img-fluid rounded" alt="Aperçu">`;
                    const currentImage = document.getElementById('currentImage');
                    if (currentImage) currentImage.style.display = 'none';
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
</body>
</html>
