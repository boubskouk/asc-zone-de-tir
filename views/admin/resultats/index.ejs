<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../../partials/header') %>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../partials/sidebar', { currentPage: 'resultats' }) %>

            <!-- Main Content -->
            <main class="col-md-10 px-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold">Gestion des résultats</h2>
                    <a href="/admin/resultats/nouveau" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Nouveau résultat
                    </a>
                </div>

                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <%= successMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <%= errorMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Filtres -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-5">
                                <input type="text" class="form-control" id="searchInput" placeholder="Rechercher une compétition...">
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" id="disciplineFilter">
                                    <option value="">Toutes les disciplines</option>
                                    <option value="pistolet">Pistolet</option>
                                    <option value="carabine">Carabine</option>
                                    <option value="tir-sportif">Tir sportif</option>
                                    <option value="tir-de-precision">Tir de précision</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" id="yearFilter">
                                    <option value="">Toutes les années</option>
                                    <% for(let year = new Date().getFullYear(); year >= 2020; year--) { %>
                                        <option value="<%= year %>"><%= year %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" id="sortFilter">
                                    <option value="date-desc">Plus récents</option>
                                    <option value="date-asc">Plus anciens</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Liste des résultats -->
                <div class="row g-4">
                    <% if (results && results.length > 0) { %>
                        <% results.forEach(result => { %>
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-header bg-primary text-white">
                                        <h6 class="mb-0">
                                            <i class="bi bi-trophy me-2"></i>
                                            <%= result.competitionName %>
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <p class="small text-muted mb-2">
                                            <i class="bi bi-calendar me-1"></i>
                                            <%= new Date(result.date).toLocaleDateString('fr-FR', {
                                                day: 'numeric',
                                                month: 'long',
                                                year: 'numeric'
                                            }) %>
                                        </p>
                                        <p class="small text-muted mb-2">
                                            <i class="bi bi-geo-alt me-1"></i>
                                            <%= result.location %>
                                        </p>
                                        <div class="mb-3">
                                            <span class="badge bg-secondary"><%= result.discipline %></span>
                                            <span class="badge bg-info text-dark"><%= result.category %></span>
                                        </div>

                                        <% if (result.rankings && result.rankings.length > 0) { %>
                                            <div>
                                                <h6 class="fw-bold small mb-2">Podium:</h6>
                                                <ol class="list-unstyled small">
                                                    <% result.rankings.slice(0, 3).forEach((ranking, index) => { %>
                                                        <li class="mb-1">
                                                            <% if (ranking.rank === 1) { %>
                                                                <i class="bi bi-trophy-fill text-warning me-1"></i>
                                                            <% } else if (ranking.rank === 2) { %>
                                                                <i class="bi bi-trophy-fill text-secondary me-1"></i>
                                                            <% } else if (ranking.rank === 3) { %>
                                                                <i class="bi bi-trophy-fill text-danger me-1"></i>
                                                            <% } %>
                                                            <%= ranking.athleteName %>
                                                            <span class="text-primary fw-bold ms-1"><%= ranking.score %></span>
                                                        </li>
                                                    <% }); %>
                                                </ol>
                                            </div>
                                        <% } %>

                                        <p class="small text-muted mb-0">
                                            <strong><%= result.rankings ? result.rankings.length : 0 %></strong> participants
                                        </p>
                                    </div>
                                    <div class="card-footer bg-white border-top-0">
                                        <div class="btn-group w-100">
                                            <a href="/resultats/<%= result.slug %>" target="_blank"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/admin/resultats/<%= result._id %>/modifier"
                                               class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    onclick="confirmDelete('<%= result._id %>', '<%= result.competitionName.replace(/'/g, "\\'") %>')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <div class="text-center py-5">
                                <i class="bi bi-trophy text-muted" style="font-size: 4rem;"></i>
                                <p class="mt-3 mb-0 text-muted">Aucun résultat trouvé</p>
                            </div>
                        </div>
                    <% } %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Précédent</a>
                                </li>
                            <% } %>

                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>

                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Suivant</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete(resultId, resultName) {
            if (confirm(`Êtes-vous sûr de vouloir supprimer le résultat "${resultName}" ?\n\nCette action est irréversible.`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/admin/resultats/${resultId}/supprimer`;
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>
