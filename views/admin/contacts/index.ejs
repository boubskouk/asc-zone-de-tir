<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../../partials/header') %>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../partials/sidebar', { currentPage: 'contacts' }) %>

            <!-- Main Content -->
            <main class="col-md-10 px-4">
                <h2 class="fw-bold mb-4">Messages de contact</h2>

                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <%= successMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <%= errorMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Filtres -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="searchInput" placeholder="Rechercher par nom, email ou sujet...">
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" id="statusFilter">
                                    <option value="">Tous les statuts</option>
                                    <option value="new">Nouveaux</option>
                                    <option value="read">Lus</option>
                                    <option value="replied">Répondus</option>
                                    <option value="archived">Archivés</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" id="sortFilter">
                                    <option value="date-desc">Plus récents</option>
                                    <option value="date-asc">Plus anciens</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistiques rapides -->
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="text-muted mb-1">Total</h6>
                                <h3 class="mb-0"><%= stats.total %></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="text-muted mb-1">Nouveaux</h6>
                                <h3 class="mb-0 text-danger"><%= stats.new %></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="text-muted mb-1">Lus</h6>
                                <h3 class="mb-0 text-warning"><%= stats.read %></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="text-muted mb-1">Répondus</h6>
                                <h3 class="mb-0 text-success"><%= stats.replied %></h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Liste des messages -->
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <% if (contacts && contacts.length > 0) { %>
                                <% contacts.forEach(contact => { %>
                                    <div class="list-group-item list-group-item-action <%= contact.status === 'new' ? 'bg-light' : '' %>">
                                        <div class="d-flex w-100 justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center mb-2">
                                                    <h6 class="mb-0 <%= contact.status === 'new' ? 'fw-bold' : '' %>">
                                                        <%= contact.name %>
                                                    </h6>
                                                    <% if (contact.status === 'new') { %>
                                                        <span class="badge bg-danger ms-2">Nouveau</span>
                                                    <% } else if (contact.status === 'read') { %>
                                                        <span class="badge bg-warning ms-2">Lu</span>
                                                    <% } else if (contact.status === 'replied') { %>
                                                        <span class="badge bg-success ms-2">Répondu</span>
                                                    <% } else if (contact.status === 'archived') { %>
                                                        <span class="badge bg-secondary ms-2">Archivé</span>
                                                    <% } %>
                                                </div>

                                                <p class="mb-1">
                                                    <strong>Sujet:</strong> <%= contact.subject %>
                                                </p>

                                                <p class="mb-2 text-muted small">
                                                    <%= contact.message.substring(0, 150) %><%= contact.message.length > 150 ? '...' : '' %>
                                                </p>

                                                <div class="small text-muted">
                                                    <i class="bi bi-envelope me-1"></i><%= contact.email %>
                                                    <% if (contact.phone) { %>
                                                        <span class="ms-3">
                                                            <i class="bi bi-telephone me-1"></i><%= contact.phone %>
                                                        </span>
                                                    <% } %>
                                                    <span class="ms-3">
                                                        <i class="bi bi-calendar me-1"></i>
                                                        <%= new Date(contact.createdAt).toLocaleDateString('fr-FR', {
                                                            day: 'numeric',
                                                            month: 'short',
                                                            year: 'numeric',
                                                            hour: '2-digit',
                                                            minute: '2-digit'
                                                        }) %>
                                                    </span>
                                                </div>
                                            </div>

                                            <div class="ms-3">
                                                <div class="btn-group-vertical btn-group-sm">
                                                    <button class="btn btn-outline-primary"
                                                            onclick="viewMessage('<%= contact._id %>')"
                                                            title="Voir le détail">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <a href="mailto:<%= contact.email %>?subject=Re: <%= contact.subject %>"
                                                       class="btn btn-outline-success"
                                                       title="Répondre par email">
                                                        <i class="bi bi-reply"></i>
                                                    </a>
                                                    <% if (contact.status !== 'archived') { %>
                                                        <button class="btn btn-outline-secondary"
                                                                onclick="archiveMessage('<%= contact._id %>')"
                                                                title="Archiver">
                                                            <i class="bi bi-archive"></i>
                                                        </button>
                                                    <% } %>
                                                    <button class="btn btn-outline-danger"
                                                            onclick="deleteMessage('<%= contact._id %>')"
                                                            title="Supprimer">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="bi bi-envelope-x text-muted" style="font-size: 4rem;"></i>
                                    <p class="mt-3 mb-0 text-muted">Aucun message trouvé</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Précédent</a>
                                </li>
                            <% } %>

                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>

                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Suivant</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            </main>
        </div>
    </div>

    <!-- Modal pour voir le message complet -->
    <div class="modal fade" id="messageModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Détail du message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="messageContent">
                    <!-- Contenu chargé dynamiquement -->
                </div>
                <div class="modal-footer">
                    <a href="#" id="replyBtn" class="btn btn-success">
                        <i class="bi bi-reply me-2"></i>Répondre
                    </a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const messageModal = new bootstrap.Modal(document.getElementById('messageModal'));

        function viewMessage(contactId) {
            // Marquer comme lu et afficher le détail
            fetch(`/admin/contacts/${contactId}`)
                .then(response => response.json())
                .then(data => {
                    const content = `
                        <div class="mb-3">
                            <strong>De:</strong> ${data.name}<br>
                            <strong>Email:</strong> <a href="mailto:${data.email}">${data.email}</a><br>
                            ${data.phone ? `<strong>Téléphone:</strong> ${data.phone}<br>` : ''}
                            <strong>Sujet:</strong> ${data.subject}<br>
                            <strong>Date:</strong> ${new Date(data.createdAt).toLocaleString('fr-FR')}
                        </div>
                        <hr>
                        <div class="mb-3">
                            <strong>Message:</strong><br>
                            <p class="mt-2">${data.message.replace(/\n/g, '<br>')}</p>
                        </div>
                    `;
                    document.getElementById('messageContent').innerHTML = content;
                    document.getElementById('replyBtn').href = `mailto:${data.email}?subject=Re: ${data.subject}`;
                    messageModal.show();

                    // Recharger la page après fermeture pour mettre à jour le statut
                    document.getElementById('messageModal').addEventListener('hidden.bs.modal', function () {
                        location.reload();
                    }, { once: true });
                });
        }

        function archiveMessage(contactId) {
            if (confirm('Archiver ce message ?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/admin/contacts/${contactId}/archiver`;
                document.body.appendChild(form);
                form.submit();
            }
        }

        function deleteMessage(contactId) {
            if (confirm('Êtes-vous sûr de vouloir supprimer ce message ?\n\nCette action est irréversible.')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/admin/contacts/${contactId}/supprimer`;
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>
