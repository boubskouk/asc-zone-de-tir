<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <%- include('partials/sidebar', { currentPage: 'dashboard', stats: stats }) %>

            <!-- Main Content -->
            <main class="col-md-10 px-4">
                <h2 class="fw-bold mb-4">Tableau de bord</h2>

                <!-- Stats Cards -->
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Membres</h6>
                                        <h3 class="mb-0"><%= stats.members %></h3>
                                        <small class="text-success">
                                            <i class="bi bi-check-circle me-1"></i>
                                            <%= stats.activeMembers %> actifs
                                        </small>
                                    </div>
                                    <div class="bg-primary text-white rounded p-3">
                                        <i class="bi bi-people fs-3"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Articles</h6>
                                        <h3 class="mb-0"><%= stats.articles %></h3>
                                        <small class="text-muted">Publiés</small>
                                    </div>
                                    <div class="bg-success text-white rounded p-3">
                                        <i class="bi bi-newspaper fs-3"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Événements</h6>
                                        <h3 class="mb-0"><%= stats.events %></h3>
                                        <small class="text-muted">À venir</small>
                                    </div>
                                    <div class="bg-warning text-dark rounded p-3">
                                        <i class="bi bi-calendar-event fs-3"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Messages</h6>
                                        <h3 class="mb-0"><%= stats.contacts %></h3>
                                        <small class="text-danger">Non lus</small>
                                    </div>
                                    <div class="bg-danger text-white rounded p-3">
                                        <i class="bi bi-envelope fs-3"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row g-4">
                    <!-- Derniers membres -->
                    <div class="col-md-6">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Derniers membres inscrits</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                    <% if (recentMembers && recentMembers.length > 0) { %>
                                        <% recentMembers.forEach(member => { %>
                                            <a href="/admin/membres/<%= member._id %>" class="list-group-item list-group-item-action">
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= member.profilePhoto %>" class="rounded-circle me-3" width="40" height="40"
                                                         onerror="this.src='https://ui-avatars.com/api/?name=<%= member.firstName %>+<%= member.lastName %>&size=40'">
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-0"><%= member.firstName %> <%= member.lastName %></h6>
                                                        <small class="text-muted"><%= member.email %></small>
                                                    </div>
                                                    <span class="badge <%= member.membershipStatus === 'active' ? 'bg-success' : 'bg-warning' %>">
                                                        <%= member.membershipStatus %>
                                                    </span>
                                                </div>
                                            </a>
                                        <% }); %>
                                    <% } else { %>
                                        <div class="p-3 text-muted">Aucun membre récent</div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Derniers messages -->
                    <div class="col-md-6">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Derniers messages</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                    <% if (recentContacts && recentContacts.length > 0) { %>
                                        <% recentContacts.forEach(contact => { %>
                                            <a href="/admin/contacts/<%= contact._id %>" class="list-group-item list-group-item-action">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div>
                                                        <h6 class="mb-1"><%= contact.name %></h6>
                                                        <p class="mb-1 small"><%= contact.subject %></p>
                                                        <small class="text-muted">
                                                            <%= new Date(contact.createdAt).toLocaleDateString('fr-FR') %>
                                                        </small>
                                                    </div>
                                                    <% if (contact.status === 'new') { %>
                                                        <span class="badge bg-danger">Nouveau</span>
                                                    <% } %>
                                                </div>
                                            </a>
                                        <% }); %>
                                    <% } else { %>
                                        <div class="p-3 text-muted">Aucun message récent</div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions rapides -->
                <div class="row g-3 mt-4">
                    <div class="col-md-3">
                        <a href="/admin/articles/nouveau" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle me-2"></i>Nouvel article
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/admin/evenements/nouveau" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle me-2"></i>Nouvel événement
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/admin/membres" class="btn btn-outline-primary w-100">
                            <i class="bi bi-people me-2"></i>Gérer les membres
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/admin/contacts" class="btn btn-outline-primary w-100">
                            <i class="bi bi-envelope me-2"></i>Voir les messages
                        </a>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
