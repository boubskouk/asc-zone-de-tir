<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../../partials/header') %>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../partials/sidebar', { currentPage: 'galerie' }) %>

            <!-- Main Content -->
            <main class="col-md-10 px-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold">Gestion de la galerie</h2>
                    <a href="/admin/galerie/nouveau" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Nouvel album
                    </a>
                </div>

                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <%= successMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <%= errorMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Filtres -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="searchInput" placeholder="Rechercher un album...">
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" id="typeFilter">
                                    <option value="">Tous les types</option>
                                    <option value="photo">Photos</option>
                                    <option value="video">Vidéos</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" id="sortFilter">
                                    <option value="date-desc">Plus récents</option>
                                    <option value="date-asc">Plus anciens</option>
                                    <option value="title">Titre (A-Z)</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Liste des albums -->
                <div class="row g-4">
                    <% if (galleries && galleries.length > 0) { %>
                        <% galleries.forEach(gallery => { %>
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 shadow-sm">
                                    <% if (gallery.coverImage) { %>
                                        <img src="<%= gallery.coverImage %>"
                                             class="card-img-top"
                                             alt="<%= gallery.title %>"
                                             style="height: 200px; object-fit: cover;"
                                             onerror="this.src='https://placehold.co/400x200/1e40af/white?text=Album'">
                                    <% } else if (gallery.items && gallery.items.length > 0) { %>
                                        <img src="<%= gallery.items[0].url %>"
                                             class="card-img-top"
                                             alt="<%= gallery.title %>"
                                             style="height: 200px; object-fit: cover;"
                                             onerror="this.src='https://placehold.co/400x200/1e40af/white?text=Album'">
                                    <% } else { %>
                                        <div class="bg-light d-flex align-items-center justify-content-center"
                                             style="height: 200px;">
                                            <i class="bi bi-images text-muted" style="font-size: 3rem;"></i>
                                        </div>
                                    <% } %>

                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0"><%= gallery.title %></h6>
                                            <span class="badge bg-<%= gallery.type === 'photo' ? 'primary' : 'info' %>">
                                                <% if (gallery.type === 'photo') { %>
                                                    <i class="bi bi-camera"></i>
                                                <% } else { %>
                                                    <i class="bi bi-play-circle"></i>
                                                <% } %>
                                            </span>
                                        </div>

                                        <% if (gallery.description) { %>
                                            <p class="small text-muted mb-2">
                                                <%= gallery.description.substring(0, 80) %><%= gallery.description.length > 80 ? '...' : '' %>
                                            </p>
                                        <% } %>

                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="bi bi-collection me-1"></i>
                                                <%= gallery.items ? gallery.items.length : 0 %> éléments
                                            </small>
                                            <small class="text-muted">
                                                <%= new Date(gallery.date || gallery.createdAt).toLocaleDateString('fr-FR') %>
                                            </small>
                                        </div>
                                    </div>

                                    <div class="card-footer bg-white border-top-0">
                                        <div class="btn-group w-100">
                                            <a href="/galerie/<%= gallery.slug %>" target="_blank"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/admin/galerie/<%= gallery._id %>/modifier"
                                               class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="/admin/galerie/<%= gallery._id %>/ajouter"
                                               class="btn btn-sm btn-outline-primary"
                                               title="Ajouter des médias">
                                                <i class="bi bi-plus-circle"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    onclick="confirmDelete('<%= gallery._id %>', '<%= gallery.title.replace(/'/g, "\\'") %>')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <div class="text-center py-5">
                                <i class="bi bi-images text-muted" style="font-size: 4rem;"></i>
                                <p class="mt-3 mb-0 text-muted">Aucun album trouvé</p>
                            </div>
                        </div>
                    <% } %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Précédent</a>
                                </li>
                            <% } %>

                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>

                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Suivant</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete(galleryId, galleryTitle) {
            if (confirm(`Êtes-vous sûr de vouloir supprimer l'album "${galleryTitle}" ?\n\nCette action est irréversible.`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/admin/galerie/${galleryId}/supprimer`;
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>
