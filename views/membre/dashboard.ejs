<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 mb-4">
                <%- include('partials/sidebar', { currentPage: 'dashboard' }) %>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <h2 class="fw-bold mb-4">Bienvenue, <%= user.firstName %> !</h2>

                <!-- Statut cotisation -->
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="text-muted mb-2">Statut</h6>
                                <% if (user.membershipStatus === 'active') { %>
                                    <h4 class="text-success mb-0">
                                        <i class="bi bi-check-circle me-2"></i>Actif
                                    </h4>
                                <% } else if (user.membershipStatus === 'pending') { %>
                                    <h4 class="text-warning mb-0">
                                        <i class="bi bi-clock me-2"></i>En attente
                                    </h4>
                                <% } else { %>
                                    <h4 class="text-danger mb-0">
                                        <i class="bi bi-x-circle me-2"></i>Expiré
                                    </h4>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="text-muted mb-2">Mes événements</h6>
                                <h4 class="mb-0"><%= myEvents.length %></h4>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="text-muted mb-2">Membre depuis</h6>
                                <h4 class="mb-0">
                                    <%= new Date(user.createdAt).toLocaleDateString('fr-FR', { year: 'numeric' }) %>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Prochains événements -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Mes prochains événements</h5>
                    </div>
                    <div class="card-body">
                        <% if (myEvents && myEvents.length > 0) { %>
                            <div class="list-group list-group-flush">
                                <% myEvents.forEach(event => { %>
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1"><%= event.title %></h6>
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar me-1"></i>
                                                    <%= new Date(event.startDate).toLocaleDateString('fr-FR') %>
                                                    <i class="bi bi-clock ms-2 me-1"></i>
                                                    <%= new Date(event.startDate).toLocaleTimeString('fr-FR', {
                                                        hour: '2-digit',
                                                        minute: '2-digit'
                                                    }) %>
                                                </small>
                                            </div>
                                            <a href="/evenements/<%= event.slug %>" class="btn btn-sm btn-outline-primary">
                                                Voir
                                            </a>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <p class="text-muted mb-0">Vous n'êtes inscrit à aucun événement à venir.</p>
                            <a href="/evenements" class="btn btn-sm btn-primary mt-3">
                                Voir les événements
                            </a>
                        <% } %>
                    </div>
                </div>

                <!-- Actions rapides -->
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Actions rapides</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <a href="/membre/profil" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-person me-2"></i>Modifier mon profil
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a href="/evenements" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-calendar-plus me-2"></i>S'inscrire à un événement
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a href="/membre/documents" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-file-earmark-arrow-up me-2"></i>Uploader un document
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a href="/contact" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-envelope me-2"></i>Contacter l'association
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
