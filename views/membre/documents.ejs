<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <div class="row">
            <div class="col-md-3 mb-4">
                <%- include('partials/sidebar', { currentPage: 'documents' }) %>
            </div>

            <div class="col-md-9">
                <h2 class="fw-bold mb-4">Mes documents</h2>

                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <%= successMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <%= errorMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Upload de documents -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-cloud-upload me-2"></i>
                            Télécharger un document
                        </h5>
                        <form action="/membre/documents/upload" method="POST" enctype="multipart/form-data">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="documentType" class="form-label">Type de document</label>
                                    <select class="form-select" id="documentType" name="documentType" required>
                                        <option value="">Sélectionner...</option>
                                        <option value="license">Licence de tir</option>
                                        <option value="medical">Certificat médical</option>
                                        <option value="insurance">Attestation d'assurance</option>
                                        <option value="id">Pièce d'identité</option>
                                        <option value="photo">Photo d'identité</option>
                                        <option value="other">Autre</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="document" class="form-label">Fichier</label>
                                    <input type="file" class="form-control" id="document" name="document"
                                           accept=".pdf,.jpg,.jpeg,.png" required>
                                    <small class="text-muted">Formats acceptés: PDF, JPG, PNG. Max: 5MB</small>
                                </div>
                                <div class="col-12">
                                    <label for="description" class="form-label">Description (optionnel)</label>
                                    <input type="text" class="form-control" id="description" name="description"
                                           placeholder="Ex: Licence valable jusqu'au 31/12/2025">
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-upload me-2"></i>Télécharger
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Mes documents -->
                <div class="card shadow-sm">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-file-earmark-text me-2"></i>
                            Documents téléchargés
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (user.documents && user.documents.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Type</th>
                                            <th>Description</th>
                                            <th>Date d'upload</th>
                                            <th>Statut</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% user.documents.forEach(doc => { %>
                                            <tr>
                                                <td>
                                                    <%
                                                    const typeLabels = {
                                                        license: 'Licence de tir',
                                                        medical: 'Certificat médical',
                                                        insurance: 'Attestation d\'assurance',
                                                        id: 'Pièce d\'identité',
                                                        photo: 'Photo d\'identité',
                                                        other: 'Autre'
                                                    };
                                                    %>
                                                    <%= typeLabels[doc.type] || doc.type %>
                                                </td>
                                                <td><%= doc.description || '-' %></td>
                                                <td>
                                                    <%= new Date(doc.uploadedAt).toLocaleDateString('fr-FR') %>
                                                </td>
                                                <td>
                                                    <% if (doc.verified) { %>
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle me-1"></i>Vérifié
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge bg-warning">
                                                            <i class="bi bi-clock me-1"></i>En attente
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="<%= doc.url %>" target="_blank" class="btn btn-outline-primary">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <a href="<%= doc.url %>" download class="btn btn-outline-secondary">
                                                            <i class="bi bi-download"></i>
                                                        </a>
                                                        <form action="/membre/documents/<%= doc._id %>/supprimer" method="POST" class="d-inline">
                                                            <button type="submit" class="btn btn-outline-danger"
                                                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce document ?')">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="bi bi-file-earmark-x text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3">Aucun document téléchargé</p>
                                <p class="small text-muted">
                                    Utilisez le formulaire ci-dessus pour télécharger vos documents
                                </p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Informations -->
                <div class="alert alert-info mt-4">
                    <h6 class="alert-heading">
                        <i class="bi bi-info-circle me-2"></i>
                        Documents requis
                    </h6>
                    <ul class="mb-0 small">
                        <li>Licence de tir en cours de validité</li>
                        <li>Certificat médical de non contre-indication à la pratique du tir sportif (< 1 an)</li>
                        <li>Attestation d'assurance responsabilité civile</li>
                        <li>Copie de la pièce d'identité</li>
                        <li>Photo d'identité récente</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
