<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <div class="row">
            <div class="col-md-3 mb-4">
                <%- include('partials/sidebar', { currentPage: 'events' }) %>
            </div>

            <div class="col-md-9">
                <h2 class="fw-bold mb-4">Mes événements</h2>

                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <%= successMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <%= errorMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Événements à venir -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-event text-primary me-2"></i>
                            Événements à venir
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (upcomingEvents && upcomingEvents.length > 0) { %>
                            <div class="list-group list-group-flush">
                                <% upcomingEvents.forEach(event => { %>
                                    <div class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-md-2 text-center">
                                                <div class="date-box bg-primary text-white rounded p-2">
                                                    <div class="fw-bold fs-4"><%= new Date(event.startDate).getDate() %></div>
                                                    <div class="small"><%= new Date(event.startDate).toLocaleDateString('fr-FR', { month: 'short' }) %></div>
                                                </div>
                                            </div>
                                            <div class="col-md-7">
                                                <h6 class="mb-1"><%= event.title %></h6>
                                                <small class="text-muted d-block">
                                                    <i class="bi bi-clock me-1"></i>
                                                    <%= new Date(event.startDate).toLocaleTimeString('fr-FR', {
                                                        hour: '2-digit',
                                                        minute: '2-digit'
                                                    }) %>
                                                </small>
                                                <% if (event.location && event.location.name) { %>
                                                    <small class="text-muted d-block">
                                                        <i class="bi bi-geo-alt me-1"></i>
                                                        <%= event.location.name %>
                                                    </small>
                                                <% } %>
                                                <span class="badge bg-secondary mt-1"><%= event.eventType %></span>
                                            </div>
                                            <div class="col-md-3 text-end">
                                                <a href="/evenements/<%= event.slug %>" class="btn btn-sm btn-outline-primary mb-2 w-100">
                                                    <i class="bi bi-eye me-1"></i>Voir
                                                </a>
                                                <form action="/evenements/<%= event._id %>/annulation" method="POST">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100"
                                                            onclick="return confirm('Êtes-vous sûr de vouloir annuler votre inscription ?')">
                                                        <i class="bi bi-x-circle me-1"></i>Annuler
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3">Vous n'êtes inscrit à aucun événement à venir</p>
                                <a href="/evenements" class="btn btn-primary">
                                    <i class="bi bi-calendar-plus me-2"></i>Découvrir les événements
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Événements passés -->
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-archive text-muted me-2"></i>
                            Événements passés
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (pastEvents && pastEvents.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Événement</th>
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% pastEvents.forEach(event => { %>
                                            <tr>
                                                <td><%= event.title %></td>
                                                <td>
                                                    <%= new Date(event.startDate).toLocaleDateString('fr-FR') %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary"><%= event.eventType %></span>
                                                </td>
                                                <td>
                                                    <a href="/evenements/<%= event.slug %>" class="btn btn-sm btn-outline-secondary">
                                                        Voir
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted mb-0">Aucun événement passé</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
