<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .gallery-item {
            position: relative;
            overflow: hidden;
            cursor: pointer;
            border-radius: 8px;
            height: 250px;
        }
        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        .gallery-item:hover img {
            transform: scale(1.1);
        }
        .gallery-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
            color: white;
            padding: 1rem;
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }
        .gallery-item:hover .gallery-overlay {
            transform: translateY(0);
        }
        .album-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .album-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <!-- Hero -->
    <section class="bg-primary text-white py-5">
        <div class="container text-center py-4">
            <h1 class="display-4 fw-bold mb-3">Galerie</h1>
            <p class="lead">Découvrez nos plus beaux moments en images</p>
        </div>
    </section>

    <!-- Filtres -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="btn-group" role="group">
                <a href="/galerie" class="btn <%= currentType === 'all' ? 'btn-primary' : 'btn-outline-primary' %>">
                    Tous
                </a>
                <a href="/galerie?type=photo" class="btn <%= currentType === 'photo' ? 'btn-primary' : 'btn-outline-primary' %>">
                    <i class="bi bi-camera me-1"></i>Photos
                </a>
                <a href="/galerie?type=video" class="btn <%= currentType === 'video' ? 'btn-primary' : 'btn-outline-primary' %>">
                    <i class="bi bi-play-circle me-1"></i>Vidéos
                </a>
            </div>
        </div>
    </section>

    <!-- Albums -->
    <section class="py-5">
        <div class="container">
            <% if (galleries && galleries.length > 0) { %>
                <div class="row g-4">
                    <% galleries.forEach(gallery => { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card album-card h-100 shadow-sm">
                                <% if (gallery.coverImage) { %>
                                    <img src="<%= gallery.coverImage %>" class="card-img-top" alt="<%= gallery.title %>"
                                         style="height: 200px; object-fit: cover;"
                                         onerror="this.src='https://placehold.co/400x200/1e40af/white?text=<%= encodeURIComponent(gallery.title) %>'">
                                <% } else if (gallery.items && gallery.items.length > 0) { %>
                                    <img src="<%= gallery.items[0].url %>" class="card-img-top" alt="<%= gallery.title %>"
                                         style="height: 200px; object-fit: cover;"
                                         onerror="this.src='https://placehold.co/400x200/1e40af/white?text=<%= encodeURIComponent(gallery.title) %>'">
                                <% } %>

                                <div class="card-body">
                                    <h5 class="card-title fw-bold">
                                        <%= gallery.title %>
                                    </h5>
                                    <% if (gallery.description) { %>
                                        <p class="card-text text-muted small">
                                            <%= gallery.description.substring(0, 100) %><%= gallery.description.length > 100 ? '...' : '' %>
                                        </p>
                                    <% } %>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div>
                                            <span class="badge bg-secondary">
                                                <% if (gallery.type === 'photo') { %>
                                                    <i class="bi bi-camera me-1"></i>Photos
                                                <% } else { %>
                                                    <i class="bi bi-play-circle me-1"></i>Vidéos
                                                <% } %>
                                            </span>
                                            <small class="text-muted ms-2">
                                                <%= gallery.items ? gallery.items.length : 0 %> éléments
                                            </small>
                                        </div>
                                        <small class="text-muted">
                                            <%= new Date(gallery.date || gallery.createdAt).toLocaleDateString('fr-FR') %>
                                        </small>
                                    </div>
                                </div>

                                <div class="card-footer bg-white border-top-0">
                                    <a href="/galerie/<%= gallery.slug %>" class="btn btn-outline-primary btn-sm w-100">
                                        Voir l'album <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav class="mt-5">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %><%= currentType !== 'all' ? '&type=' + currentType : '' %>">
                                        Précédent
                                    </a>
                                </li>
                            <% } %>

                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %><%= currentType !== 'all' ? '&type=' + currentType : '' %>">
                                        <%= i %>
                                    </a>
                                </li>
                            <% } %>

                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %><%= currentType !== 'all' ? '&type=' + currentType : '' %>">
                                        Suivant
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-images text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">Aucune galerie disponible</h5>
                    <p class="text-muted">Revenez plus tard pour découvrir nos albums photos et vidéos</p>
                </div>
            <% } %>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
