<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <!-- Hero -->
    <section class="bg-primary text-white py-5">
        <div class="container text-center py-4">
            <h1 class="display-4 fw-bold mb-3">Événements</h1>
            <p class="lead">Ne manquez aucun de nos événements !</p>
        </div>
    </section>

    <!-- Filtres -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="btn-group" role="group">
                <a href="/evenements" class="btn <%= currentType === 'all' ? 'btn-primary' : 'btn-outline-primary' %>">
                    Tous
                </a>
                <a href="/evenements?type=competition" class="btn <%= currentType === 'competition' ? 'btn-primary' : 'btn-outline-primary' %>">
                    Compétitions
                </a>
                <a href="/evenements?type=training" class="btn <%= currentType === 'training' ? 'btn-primary' : 'btn-outline-primary' %>">
                    Entraînements
                </a>
                <a href="/evenements?type=cultural" class="btn <%= currentType === 'cultural' ? 'btn-primary' : 'btn-outline-primary' %>">
                    Culturel
                </a>
                <a href="/evenements?type=social" class="btn <%= currentType === 'social' ? 'btn-primary' : 'btn-outline-primary' %>">
                    Social
                </a>
            </div>
        </div>
    </section>

    <!-- Événements à venir -->
    <section class="py-5">
        <div class="container">
            <h2 class="h4 fw-bold mb-4">
                <i class="bi bi-calendar-event text-primary me-2"></i>
                Événements à venir
            </h2>

            <% if (upcomingEvents && upcomingEvents.length > 0) { %>
                <div class="row g-4">
                    <% upcomingEvents.forEach(event => { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm">
                                <% if (event.featuredImage) { %>
                                    <img src="<%= event.featuredImage %>"
                                         class="card-img-top"
                                         alt="<%= event.title %>"
                                         onerror="this.src='https://placehold.co/400x200/1e40af/white?text=<%= encodeURIComponent(event.title) %>'">
                                <% } %>
                                <div class="card-body">
                                    <div class="d-flex mb-3">
                                        <div class="date-box bg-primary text-white text-center rounded p-2 me-3">
                                            <div class="fw-bold fs-4"><%= new Date(event.startDate).getDate() %></div>
                                            <div class="small"><%= new Date(event.startDate).toLocaleDateString('fr-FR', { month: 'short' }) %></div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <span class="badge bg-secondary mb-2"><%= event.eventType %></span>
                                            <% if (event.isFeatured) { %>
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-star-fill"></i>
                                                </span>
                                            <% } %>
                                            <h5 class="card-title mb-1"><%= event.title %></h5>
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                <%= new Date(event.startDate).toLocaleTimeString('fr-FR', {
                                                    hour: '2-digit',
                                                    minute: '2-digit'
                                                }) %>
                                            </small>
                                        </div>
                                    </div>

                                    <p class="card-text text-muted small">
                                        <%= event.description.substring(0, 100) %>...
                                    </p>

                                    <% if (event.location && event.location.name) { %>
                                        <p class="small text-muted mb-2">
                                            <i class="bi bi-geo-alt me-1"></i><%= event.location.name %>
                                        </p>
                                    <% } %>

                                    <% if (event.registrationRequired) { %>
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <small class="text-muted">
                                                <i class="bi bi-people me-1"></i>
                                                <%= event.participants.length %>/<%= event.maxParticipants || '∞' %>
                                            </small>
                                            <% if (event.price > 0) { %>
                                                <span class="badge bg-success"><%= event.price.toLocaleString() %> FCFA</span>
                                            <% } else { %>
                                                <span class="badge bg-success">Gratuit</span>
                                            <% } %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="card-footer bg-white border-top-0">
                                    <a href="/evenements/<%= event.slug %>" class="btn btn-outline-primary btn-sm w-100">
                                        Voir détails <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">Aucun événement à venir</h5>
                    <p class="text-muted">Consultez nos événements passés ci-dessous</p>
                </div>
            <% } %>
        </div>
    </section>

    <!-- Événements passés -->
    <% if (pastEvents && pastEvents.length > 0) { %>
        <section class="py-5 bg-light">
            <div class="container">
                <h2 class="h4 fw-bold mb-4">
                    <i class="bi bi-archive text-muted me-2"></i>
                    Événements passés
                </h2>

                <div class="row g-4">
                    <% pastEvents.forEach(event => { %>
                        <div class="col-md-6 col-lg-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title"><%= event.title %></h6>
                                    <small class="text-muted d-block mb-2">
                                        <i class="bi bi-calendar me-1"></i>
                                        <%= new Date(event.startDate).toLocaleDateString('fr-FR') %>
                                    </small>
                                    <a href="/evenements/<%= event.slug %>" class="btn btn-sm btn-outline-secondary w-100">
                                        Voir
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>
    <% } %>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
