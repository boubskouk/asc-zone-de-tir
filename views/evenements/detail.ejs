<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= siteName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <% if (event.featuredImage) { %>
                    <img src="<%= event.featuredImage %>" class="img-fluid rounded shadow-sm mb-4" alt="<%= event.title %>">
                <% } %>

                <h1 class="fw-bold mb-3"><%= event.title %></h1>

                <div class="d-flex gap-2 mb-4">
                    <span class="badge bg-primary"><%= event.eventType %></span>
                    <span class="badge bg-secondary"><%= event.status %></span>
                </div>

                <div class="mb-4">
                    <%- event.description %>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">Informations</h5>

                        <div class="mb-3">
                            <i class="bi bi-calendar text-primary me-2"></i>
                            <strong>Date:</strong><br>
                            <%= new Date(event.startDate).toLocaleDateString('fr-FR', {
                                weekday: 'long',
                                year: 'numeric',
                                month: 'long',
                                day: 'numeric'
                            }) %>
                        </div>

                        <div class="mb-3">
                            <i class="bi bi-clock text-primary me-2"></i>
                            <strong>Heure:</strong><br>
                            <%= new Date(event.startDate).toLocaleTimeString('fr-FR', {
                                hour: '2-digit',
                                minute: '2-digit'
                            }) %>
                            <% if (event.endDate) { %>
                                - <%= new Date(event.endDate).toLocaleTimeString('fr-FR', {
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %>
                            <% } %>
                        </div>

                        <% if (event.location) { %>
                            <div class="mb-3">
                                <i class="bi bi-geo-alt text-primary me-2"></i>
                                <strong>Lieu:</strong><br>
                                <%= event.location.name %><br>
                                <small class="text-muted">
                                    <%= event.location.address %><br>
                                    <%= event.location.city %>
                                </small>
                            </div>
                        <% } %>

                        <% if (event.registrationRequired) { %>
                            <div class="mb-3">
                                <i class="bi bi-people text-primary me-2"></i>
                                <strong>Participants:</strong><br>
                                <%= event.participants.length %>/<%= event.maxParticipants || '∞' %>
                            </div>

                            <div class="mb-3">
                                <i class="bi bi-cash text-primary me-2"></i>
                                <strong>Tarif:</strong><br>
                                <% if (event.price > 0) { %>
                                    <%= event.price.toLocaleString() %> FCFA
                                <% } else { %>
                                    Gratuit
                                <% } %>
                            </div>

                            <% if (isAuthenticated) { %>
                                <% if (canRegister && !isRegistered) { %>
                                    <form action="/evenements/<%= event._id %>/inscription" method="POST">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-check-circle me-2"></i>S'inscrire
                                        </button>
                                    </form>
                                <% } else if (isRegistered) { %>
                                    <button class="btn btn-success w-100" disabled>
                                        <i class="bi bi-check-circle me-2"></i>Déjà inscrit
                                    </button>
                                    <form action="/evenements/<%= event._id %>/annulation" method="POST" class="mt-2">
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                            Annuler mon inscription
                                        </button>
                                    </form>
                                <% } else { %>
                                    <button class="btn btn-secondary w-100" disabled>
                                        Inscriptions fermées
                                    </button>
                                <% } %>
                            <% } else { %>
                                <a href="/auth/login" class="btn btn-primary w-100">
                                    Connectez-vous pour vous inscrire
                                </a>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
